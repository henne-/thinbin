{
    "hostname": "thinbin.risu.io",
    "port": 8001,
    "public": "/public",
    "pouchStore": "/tmp/thinbin",

    "shared": {
        "apiUrl":"http://localhost:8001/api",
        "maxFileSizeBytes": 524288000,
        "allowedPlaintextMimes": [
            "text/plain",
            "text/javascript",
            "text/html",
            "text/css",
            "text/sql",
            "text/bash",
            "text/c",
            "*/*"
        ],
        "allowedBinaryMimes": [
            "application/octet-stream",
            "*/*"
        ],
        "retentions": {
            "_30_minutes": 1800000,
            "_60_minutes": 3600000,
            "_12_hours": 43200000,
            "_24_hours": 86400000,
            "_1_week": 604800000,
            "_1_month": 2678400000,
            "_3_months": 8035200000,
            "_6_months": 16070400000,
            "_1_year": 32140800000
        },
        "displayModes": {
            "_plaintext": "text/plain",
            "_binary": "application/octet-stream"
        }
    }
}
